@model List<WebFinal.Models.LoaiSanPham>


<div id="scroller">
    <h2 class="devvn_title">Danh mục trang sức bạc</h2>
    <div class="bannerContent">
        <div id="devvn_bannerContent">
            <div class="row row-padding-10">
                @if (Model != null)
                {
                        foreach (var item in Model)
                        {
                            <div class="col-sm-4 col-md-4 col-xs-6 devvn_bannerContent_item">
                                <a href="@Url.Action("Index", "LoaiSanPham", new { @MaLoaiSP=item.MaLoaiSP})">
                                    <img src="@Url.Content("~/images/categories/" + item.MaLoaiSP + ".jpg")" alt="@item.TenLoaiSP" title="@item.TenLoaiSP">
                                    <div class="left">@item.TenLoaiSP</div>
                                </a>
                            </div>
                        }

                }

            </div>
        </div>
    </div>

</div>

<style>

    .devvn_bannerContent_item {
        text-align: center;
        margin-bottom: 10px;
    }


    div#devvn_bannerContent img {
        width: 90%;
        height: auto;
        border: 1px solid black;
    }

    div#devvn_bannerContent .left {
        text-align: center;
        position: absolute;
        bottom: 0;
        height: 15%;
        left: 8.5%;
        width: 83%;
        padding-top: 1%;
        color: white;
        font-size: 16px;
        background-color: black;
    }
</style>