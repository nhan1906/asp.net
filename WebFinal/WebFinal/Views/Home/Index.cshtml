@{
    Layout = "~/Views/Shared/_LayoutChung.cshtml";
    ViewBag.Title = "Home Page";
}

@section ThemJsChoTungPage {
    @*Js*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        window.alert = function () { };
        var defaultCSS = document.getElementById('bootstrap-css');
        function changeCSS(css) {
            if (css) $('head > link').filter(':first').replaceWith('<link rel="stylesheet" href="' + css + '" type="text/css" />');
            else $('head > link').filter(':first').replaceWith(defaultCSS);
        }
        $(document).ready(function () {
            var iframe_height = parseInt($('html').height());
            window.parent.postMessage(iframe_height, 'https://bootsnipp.com');
        });
    </script>
}

@section  RenderSliderImageForFrontPage{
    @*Slider hình ảnh*@
    <!-- Main Slider ============================================= -->
    <div class="main-slider">
        <div class="layer-slider">
            <ul class="slides">
                @Html.Partial("~/Views/Home/_SliderImagePartial.cshtml")
            </ul><!-- end .slides -->
        </div> <!-- end .layer-slider -->
    </div> <!-- end .main-slider -->
}

<div class="container-fluid">
    <section id="main">
        @Html.Action("_LoaiSanPhamHome", "LoaiSanPham")
        @RenderPage("~/Views/Home/Index/_Intro.cshtml")
    </section><!-- End Main container -->
</div>
